# Postgres
POSTGRES_USER=root
POSTGRES_PASSWORD=root
POSTGRES_DB=delivery_db
POSTGRES_PORT=5432

# MongoDB
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=rootpassword
MONGO_PORT=27017
MONGO_PASSWORD=auth_password

# RabbitMQ
RABBITMQ_USER=delivery_user
RABBITMQ_PASSWORD=delivery_pass
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# Auth Service
AUTH_SERVICE_PORT=3000
JWT_SECRET=your_jwt_secret_here

# Order Service
ORDER_SERVICE_PORT=8080

# Tracking Service
TRACKING_SERVICE_PORT=8081

# Notification Service
NOTIFICATION_SERVICE_PORT=3001

# API Gateway
API_GATEWAY_PORT=8000

# ===========================================
# NOTIFICATION SERVICE SETTINGS
# ===========================================

# Notification Providers (local ou azure)
EMAIL_PROVIDER=local
PUSH_PROVIDER=local

# Azure Functions (quando usar EMAIL_PROVIDER=azure)
AZURE_FUNCTIONS_BASE_URL=http://host.docker.internal:7071
AZURE_FUNCTIONS_API_KEY=
AZURE_FUNCTIONS_TIMEOUT=30000

# Email Settings
EMAIL_FROM_NAME=Delivery Notification Service
EMAIL_FROM_ADDRESS=noreply@delivery.com

# Notification Service Logs
NOTIFICATION_LOG_LEVEL=info